.wrapper {    
	margin-top: 80px;
	margin-bottom: 20px;
}

.form-signin {
  max-width: 520px;
  padding: 30px 38px 66px;
  margin: 0 auto;
  background-color: #ffffff;
  box-shadow: 0 20px 50px 0 rgba(0, 11, 29, 0.2);
  }

.form-signin-heading {
  text-align:center;
  margin-bottom: 30px;
}

.form-control {
  position: relative;
  font-size: 16px;
  height: auto;
  padding: 10px;
}

.containerDiv {
	padding-top: 10pc !important;
}

hr {
    display: block;
    height: 1px;
    border: 0;
    border-top: 1px solid #ccc;
    margin: 1em 0 !important;
    padding-bottom: 0.75px !important;
    border-color: #cb42ab !important;
    background-color: #cb42ab;
}

.logo {
	width: 8pc;
}
